<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- material theme colors
     change these to update the activity theme colors-->
    <color name="pt_primary">#373b58</color>
    <color name="pt_primary_dark">#373b58</color>
    <color name="pt_accent">#ff3136ff</color>

    <!-- Toolbar user name and topic title for chat
     peppertalk_toolbar -->
    <color name="pt_tb_bg">@color/pt_primary_dark</color>
    <color name="pt_tb_user_name">#ffffff</color>
    <color name="pt_tb_topic_title">#8e93b9</color>
    <color name="pt_tb_connecting">#ffffff</color>

    <!-- chat window -->
    <color name="pt_chat_window_bg">#ecedef</color>
    <color name="pt_chat_typing">#57a5f8</color>
    <color name="pt_chat_date_section_bg">#c3ccde</color>
    <color name="pt_chat_text_section">#000000</color>

    <!-- Message bubble right - outgoing message
        color will be tinted on top of the bg drawable nine patch
        Note: Drawable bubble should be a nine patch -->
    <drawable name="pt_msg_bubble_right">@drawable/ic_chat_bubble_right</drawable>
    <color name="pt_msg_bubble_right">#3cabdd</color>
    <color name="pt_msg_user_right">#ffffff</color>
    <color name="pt_msg_time_right">#8e93b9</color>
    <color name="pt_msg_text_right">#ffffff</color>
    <color name="pt_msg_status_right">#ffffff</color>

    <!-- chat bubble left - incoming message
        color will be tinted on top of the bg drawable nine patch
        Note: Drawable bubble should be a nine patch -->
    <drawable name="pt_msg_bubble_left">@drawable/ic_chat_bubble_left</drawable>
    <color name="pt_msg_bubble_left">#ffffff</color>
    <color name="pt_msg_user_left">#8e93b9</color>
    <color name="pt_msg_time_left">#8e93b9</color>
    <color name="pt_msg_text_left">#373b58</color>
    <color name="pt_msg_status_left">#ffffff</color>

    <!-- conversations screen -->
    <color name="pt_tb_conv_title">#ffffff</color>
    <color name="pt_conv_text_section">#ffffff</color>
    <color name="pt_conv_section_bg">#3cabdd</color>

</resources>